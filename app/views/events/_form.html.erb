<%= form_for(@event) do |f| %>

  
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>
  
     <div class="field">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>

    <div class="field">
    <%= f.label :event_date %>
    <%= f.date_field :event_date %>
    <%= f.label :start_time %>
    <%= f.number_field :start_time %>
    <%= f.label :end_time %>
    <%= f.number_field :end_time %>

  </div>
  
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>