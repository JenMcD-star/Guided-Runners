<li>
  <%= gravatar_for user, size: 100 %>
  <%= link_to user.name, user %>


  <p>
  <strong>Age:</strong>
  <%= user.age %>
</p>

<p>
  <strong>Bio:</strong>
  <%= user.bio %>
</p>

<p>
  <strong>Status:</strong>
  <%= user.status %>
</p>
<% if current_user.admin? && !current_user?(user) %>
<td><%= button_to('Delete', user, method: :delete, data: { turbo_confirm: 'Are you sure?' }) %></td>
<% end %>
</li>


