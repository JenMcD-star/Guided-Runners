<li>
  <%= gravatar_for user, size: 100 %>
  <%= link_to user.name, user %>


  <p>
  <strong>Age:</strong>
  <%= user.age %>
</p>

<p>
  <strong>Bio:</strong>
  <%= user.bio %>
</p>

<p>
  <strong>Status:</strong>
  <%= user.status %>
</p>

<% if user.id != current_user.id %><h3>
 <%= button_to 'message me', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: "post"%></h3>
 <% end %>

 
<% if current_user.admin? && !current_user?(user) %>
<td><%= button_to('Delete', user, method: :delete, data: { turbo_confirm: 'Are you sure?' }) %></td>
<% end %>
</li>


