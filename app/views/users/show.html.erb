<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <%= link_to 'Delete', @user, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </h1>
    </section>
  </aside>
</div>